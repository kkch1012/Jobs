# 환경변수 설정 예시 (env.example)
# 이 파일을 복사하여 .env로 이름을 바꾸고 실제 값들을 입력하세요

# OpenRouter API 키 (필수)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 네이버 OAuth 설정 (네이버 로그인 사용시 필수)
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# JWT 시크릿 키 (운영환경에서는 강력한 키 사용)
SECRET_KEY=your_very_long_and_secure_secret_key_here

# 데이터베이스 설정 (필요시 변경)
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=jobs

# MongoDB 설정 (필요시 변경)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=yourpassword
MONGO_INITDB_DATABASE=jobs_db

# 배치 작업 스케줄 (기본: 매일 오전 8시)
BATCH_SCHEDULE_HOUR=8
BATCH_SCHEDULE_MINUTE=0

# 토큰 만료 시간 (분 단위)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 유사도 계산 설정
SIMILARITY_TOP_K=30
SIMILARITY_LIMIT=20

# pgAdmin 설정 (선택사항)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# MongoDB Express 설정 (선택사항)
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin 